{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/htmlcov": true,
        "**/.venv": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/.Python": true,
        "**/*.egg-info": true,
        "**/.installed.cfg": true,
        "**/*.egg": true,
        "**/build": true,
        "**/dist": true,
        "**/*.log": true,
        "**/logs": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },
    "files.watcherExclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true,
        "**/dist": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },

    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.addMissingImports": "explicit",
        "source.fixAll": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",

    "search.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.venv": true,
        "**/dist": true,
        "**/*.log": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },

    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.addMissingImports": "explicit"
        }
    },

    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": true
}